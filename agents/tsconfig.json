{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "composite": true,
    "incremental": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "paths": {
      "@matrix/shared": ["./shared/src/index.ts"],
      "@matrix/shared/*": ["./shared/src/*"]
    }
  },
  "references": [
    { "path": "./shared" },
    { "path": "./merovingian" },
    { "path": "./keymaker" },
    { "path": "./link" }
  ],
  "include": [],
  "exclude": ["node_modules", "dist"]
}
