{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "node scripts/validate-command.js"
          }
        ]
      }
    ]
  },
  "permissions": {
    "deny": [
      "Bash(taskkill /F /IM*)",
      "Bash(taskkill /IM*)",
      "Bash(Stop-Process*)",
      "Bash(powershell*Stop-Process*)"
    ],
    "allow": [
      "WebSearch",
      "Bash(git:*)",
      "Bash(gh:*)",
      "Bash(winget:*)",
      "Bash(forge:*)",
      "Bash(where:*)",
